<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IA Chatbot - OpenRouter</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/4.3.0/marked.min.js"></script>
    <style>
        .chat-container { height: calc(100vh - 180px); }
        .markdown-body pre { background: #1f2937; color: white; padding: 1rem; border-radius: 0.5rem; overflow-x: auto; margin: 0.5rem 0; }
        .markdown-body code { font-family: monospace; background: #f3f4f6; padding: 0.2rem 0.4rem; border-radius: 0.25rem; }
        .message-user { align-self: flex-end; background-color: #3b82f6; color: white; }
        .message-ai { align-self: flex-start; background-color: #f3f4f6; color: #1f2937; }
        @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
        .loading-dots span { animation: pulse 1.5s infinite; }
        .loading-dots span:nth-child(2) { animation-delay: 0.2s; }
        .loading-dots span:nth-child(3) { animation-delay: 0.4s; }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased">

    <div class="max-w-4xl mx-auto p-4 flex flex-col h-screen">
        <!-- Header -->
        <header class="flex justify-between items-center mb-6 bg-white p-4 rounded-xl shadow-sm border border-gray-100">
            <div>
                <h1 class="text-xl font-bold text-gray-800">Chatbot OpenRouter</h1>
                <p class="text-xs text-green-500 flex items-center">
                    <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span> Connecté via API
                </p>
            </div>
            <select id="model-select" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                <option value="openrouter/auto">Sélection auto (Libre)</option>
                <option value="deepseek/deepseek-r1:free">DeepSeek R1 (Free)</option>
                <option value="meta-llama/llama-3.3-70b-instruct:free">Llama 3.3 70B (Free)</option>
                <option value="google/gemini-2.0-flash-exp:free">Gemini 2.0 Flash (Free)</option>
            </select>
        </header>

        <!-- Chat Display -->
        <div id="chat-display" class="chat-container overflow-y-auto flex flex-col space-y-4 mb-4 p-4 bg-white rounded-xl shadow-inner border border-gray-200">
            <!-- Messages will appear here -->
            <div class="message-ai p-4 rounded-2xl max-w-[85%] shadow-sm">
                Bonjour ! Je suis votre assistant IA. Comment puis-je vous aider aujourd'hui ?
            </div>
        </div>

        <!-- Input Area -->
        <div class="bg-white p-4 rounded-xl shadow-md border border-gray-200">
            <form id="chat-form" class="flex gap-2">
                <input type="text" id="user-input" placeholder="Posez votre question ici..." 
                       class="flex-1 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all">
                <button type="submit" id="send-btn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors flex items-center gap-2">
                    Envoyer
                </button>
            </form>
        </div>
    </div>

    <script>
        const API_KEY = "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";
        const chatDisplay = document.getElementById('chat-display');
        const chatForm = document.getElementById('chat-form');
        const userInput = document.getElementById('user-input');
        const modelSelect = document.getElementById('model-select');
        const sendBtn = document.getElementById('send-btn');

        let chatHistory = [];

        // Fonction de délai pour le backoff
        const sleep = (ms) => new Promise(resolve => setTimeout(resolve, ms));

        // Fonction d'appel API avec retry et backoff exponentiel
        async function fetchWithRetry(messages, model, retries = 5, delay = 1000) {
            try {
                const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
                    method: "POST",
                    headers: {
                        "Authorization": `Bearer ${API_KEY}`,
                        "HTTP-Referer": window.location.origin,
                        "X-Title": "Chatbot Free App",
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        model: model,
                        messages: messages
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    
                    // Si erreur 429 (Too Many Requests) ou 5xx (Server Error)
                    if ((response.status === 429 || response.status >= 500) && retries > 0) {
                        console.log(`Tentative échouée (${response.status}). Nouvelle tentative dans ${delay}ms...`);
                        await sleep(delay);
                        return fetchWithRetry(messages, model, retries - 1, delay * 2);
                    }
                    throw new Error(errorData.error?.message || "Erreur API");
                }

                return await response.json();
            } catch (error) {
                if (retries > 0) {
                    await sleep(delay);
                    return fetchWithRetry(messages, model, retries - 1, delay * 2);
                }
                throw error;
            }
        }

        function appendMessage(role, text) {
            const div = document.createElement('div');
            div.className = `${role === 'user' ? 'message-user' : 'message-ai'} p-4 rounded-2xl max-w-[85%] shadow-sm markdown-body`;
            
            if (role === 'ai') {
                div.innerHTML = marked.parse(text);
            } else {
                div.textContent = text;
            }
            
            chatDisplay.appendChild(div);
            chatDisplay.scrollTop = chatDisplay.scrollHeight;
        }

        function showLoading() {
            const div = document.createElement('div');
            div.id = 'loading-indicator';
            div.className = 'message-ai p-4 rounded-2xl max-w-[85%] shadow-sm flex gap-1 loading-dots';
            div.innerHTML = '<span>.</span><span>.</span><span>.</span>';
            chatDisplay.appendChild(div);
            chatDisplay.scrollTop = chatDisplay.scrollHeight;
        }

        function removeLoading() {
            const loader = document.getElementById('loading-indicator');
            if (loader) loader.remove();
        }

        chatForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = userInput.value.trim();
            if (!message) return;

            // Interface
            appendMessage('user', message);
            userInput.value = '';
            showLoading();
            sendBtn.disabled = true;

            // Historique
            chatHistory.push({ role: "user", content: message });

            try {
                const data = await fetchWithRetry(chatHistory, modelSelect.value);
                const aiResponse = data.choices[0].message.content;
                
                removeLoading();
                appendMessage('ai', aiResponse);
                chatHistory.push({ role: "assistant", content: aiResponse });
            } catch (error) {
                removeLoading();
                appendMessage('ai', `❌ **Erreur :** ${error.message}. Veuillez réessayer plus tard.`);
            } finally {
                sendBtn.disabled = false;
            }
        });
    </script>
</body>
</html>
